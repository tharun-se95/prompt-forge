{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-manager:default",
    "sql:default",
    "store:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://*/*"
        },
        {
          "url": "https://*/*"
        },
        {
          "url": "http://localhost:11434/*"
        },
        {
          "url": "http://127.0.0.1:11434/*"
        }
      ]
    }
  ]
}